width:25% !important;
height:25% !important;
}

.sidebar #tormnt_modal .detail_blk .right_blk{
width: 65%;
}
.sidebar #tormnt_modal .detail_blk .right_blk.custom-right-side{
  background:transparent;
  padding-top:0;
  width:35%
}
.sidebar #tormnt_modal .detail_blk .right_blk.custom-right-side .vote_blk{
  flex-direction: column !important;
  align-items: flex-start;
}
</style>


<script>

      function open_tormnt_modal(name, email, likes, created, dislike, url, rank, postId){
        document.getElementById("tormnt_modal").style.display="block"
        console.log("Modal click");
    }

  function openSidebar(userId ,username , email) {

    document.getElementById("cart-box").style.right = "0px"; 
    document.getElementById("sidebar_user_name").innerHTML= username
    document.getElementById("sidebar_user_email").innerHTML= email
  
      $.ajax({
      type: "GET",
      url: "user_all_posts",
      data: {user_id: userId },
      success: function(response) {
        if (response) {
          console.log("Response of the posts in sidebar --- ",response );

        $('.sibarPosts').html('');
        response?.posts?.forEach((item , ind)=>{
          // console.log("Inside the loop === ", item);
          var sidebarHTML = generateSidebarHTML(item , ind) ;
          // console.log(sidebarHTML);
           $('.sibarPosts').append(sidebarHTML);

        })

        } else {
          response.posts.forEach(function(post) {
            $("#userPosts").append("<p>" + post.title + "</p>");
          });
        }
      },
      error: function(error) {
        console.log("Error fetching user posts: ", error);
        $('.sibarPosts').html('');
        const exception = `
                  <div class="text-white mb-3">
                  <p>Nothing Posted Yet</p>
                  </div>`

        $('.sibarPosts').append(exception);

      }
    });
  }

  function deleteImage(imageId) {

    try {
      $.ajax({
      type: "GET",
      url: "delete_user_post",
      data: {id: imageId },
      success: function(response) {
        if (response) {
          console.log("Response of the Delete Post--- ",response );
            const postElement = document.getElementById(`post_${imageId}`);
            console.log("Post Element --", postElement);
            if (postElement) {
                postElement.remove();
            }
          //  document.getElementById("cart-box").style.right = "-400px";

        } else {
          response.posts.forEach(function(post) {
            $("#userPosts").append("<p>" + post.title + "</p>");
          });
        }
      },
      error: function(error) {
        console.log("Error fetching user posts: ", error);
      }
    });
    } catch (error) {
      console.log("Error on Delete post =", error);
      
    }
}

  function closeSidebar() {
    document.getElementById("cart-box").style.right = "-400px";
    // location.reload();

  }

    function generateSidebarHTML(item , ind){
      const mediaType = item?.image_type // 'image' or 'video'

      let mediaHTML = '';

      if (mediaType === 'image') {
          mediaHTML = `<img style="width: 200px; height: 200px" src="${item?.post_image}" alt="Image">`;
      } else if (mediaType === 'video') {
          mediaHTML = `
              <video style="width: 200px; height: 200px" controls>
                  <source src="${item?.post_image}" type="video/mp4">
                  Your browser does not support the video tag.
              </video>
          `;
      }
         return  `
                <div class="text-white mb-3" id="post_${item?.id}">
                    <div style="color:white">Date Posted</div>
                    <div class="text-white mb-3">${item?.created_at}</div>
                    <div class="detail_blk mt-0" style="align-items: flex-start">
                        <div class="right_blk position-relative">
                            <div class="img" >
                            ${mediaHTML}
                                <button onclick="deleteImage('${item?.id}')" class="delete-button" style="position: absolute;top: 12px;right: 12px; background: transparent">
                                    <img style="width: 20px; height: 30px" src="<%= asset_path("delete-icon.png") %>" alt="Delete">
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            `;

  }

    function open_profile(user_email, id) {
        document.getElementById("user_modal").style.display = "block";
        $.ajax({
            type: "GET",
            url: "show_user_profile",
            data: {id: id},
            dataType: "json",
            success: function (data) {
                var i = 0
                data.user.forEach(function (user) {
                    $('#badge_blk').empty();
                    $('#tournament_blk').empty();
                    if (user.email === user_email) {
                        document.getElementById("profile_username").innerHTML = user.username;
                        document.getElementById("profile_email").innerHTML = user.email;
                        document.getElementById("profile_phone").innerHTML = user.phone;
                        document.getElementById("profile_bio").innerHTML = user.bio;
                        document.getElementById("image").src = data.image
                    }
                })
                if (data.title.length !== 0) {
                    data.title.forEach(function (badge_title) {
                        var parent_div = document.getElementById("badge_blk")
                        var div1 = document.createElement("div")
                        div1.setAttribute("class", "item")
                        var div2 = document.createElement("div")
                        div2.setAttribute("class", "fig_outter")
                        var div3 = document.createElement("div")
                        div3.setAttribute("class", "fig")
                        var image = document.createElement("img")
                        image.setAttribute("style", "border-radius: 75%; object-fit: cover")
                        image.src = data.badge_images[i]
                        div3.appendChild(image)
                        div2.appendChild(div3)
                        div1.appendChild(div2)
                        var span = document.createElement("span")
                        span.innerHTML = badge_title
                        div1.appendChild(span)
                        parent_div.appendChild(div1)
                        i++;
                    })
                }
                if (data.tournament_banners.length !== 0) {
                  data.tournament_banners.forEach(function (tournament_title, index) {
                    var parent_div = document.getElementById("tournament_blk");
                    // Create a wrapper div for each entry
                    var wrapperDiv = document.createElement("div");
                    var span = document.createElement("span");
                    span.innerHTML = (index + 1) + ". " + tournament_title; // Add index + 1 before the title
                    wrapperDiv.appendChild(span);
                    parent_div.appendChild(wrapperDiv);
                  });
                }
            },
        });
    }

    function close_profile() {
        document.getElementById("user_modal").style.display = "none";
    }

    function open_post(id){
        document.getElementById("post_modal").style.display = "block";
        $.ajax({
            type: "GET",
            url: "get_user_post",
            data: {id: id},
            success: function(response){
                $('#post_image_user').css({
                    'background-image': 'url(' + response.post_image + ')'
                })
                document.getElementById("likes").innerHTML = response.likes
                document.getElementById("dislikes").innerHTML = response.dislike
            }
        })
    }

    function close_post_modal(){
        document.getElementById("post_modal").style.display = "none";
    }

    var user_id = ""

    function open_disable_dialog(id){
        user_id = id
        document.getElementById("disable_modal").style.display = "block";
    }

    function disable_user_confirm(){
        $.ajax({
            type: "GET",
            url: "user_disable",
            data: {id: user_id},
            success: function(response){
                document.getElementById("disable_modal").style.display = "none";
                location.reload();
            }
        })
    }

    function disable_user_cancel(){
        document.getElementById("disable_modal").style.display = "none";
    }

    function open_enable_dialog(id){
        user_id = id
        document.getElementById("enable_modal").style.display = "block";
    }

    function enable_user_confirm(){
        $.ajax({
            type: "GET",
            url: "user_enable",
            data: {id: user_id},
            success: function(response){
                document.getElementById("enable_modal").style.display = "none";
                location.reload();
            }
        })
    }

    function enable_user_cancel(){
        document.getElementById("enable_modal").style.display = "none";
    }

    function select_all(){
        if(document.getElementById('main_checkbox').checked === true){
          $('input[type="checkbox"]').prop("checked", true)
        }else{
          $('input[type="checkbox"]').prop("checked", false)
        }
    }

    function export_csv(id){
        if(document.getElementById(id).checked === true){
            $.ajax({
                type: "GET",
                url: "user-export",
                data: {user_id: id, checked: true},
                success: function(response){
                }
            })
        }else if(document.getElementById(id).checked === false){
            $.ajax({
                type: "GET",
                url: "user-export",
                data: {user_id: id, checked: false},
                success: function(response){
                }
            })
        }
    }

</script>