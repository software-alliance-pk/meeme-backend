  height: 100%;
  width: -400px;
  position: fixed;
  top: 0;
  right: -400px;
  border-radius: 40px 0px 0px 40px;
  border: 2px solid #5D5D5D;
  border-right:none;
  background: #201E23;
  overflow-x: hidden;
  transition: 0.5s;
  z-index:99;
}

.sidebar table {
  max-width:75%;
}
.sidebar #tormnt_modal {
  padding: 20px;
}
.sidebar .x_btn{
min-width: 38px !important;
width: 38px !important;
height: 39px !important;
top: 12px !important;
right: 12px !important;
}
