<aside id="sidebar">
    <div class="inside">
        <div class="logo_blk">
            <div class="logo">
                <a href="/dashboard">
                    <img src="<%= asset_path("logo.svg")%>" alt="">
                </a>
            </div>
        </div>
        <div class="list_blk" id="overview">
            <p class="title">Overview</p>
            <ul>
                <li>
                    <a href="/dashboard" class="btn <%= params[:action] == "dashboard" ? "active" : "" %>">
                        <img src="<%= asset_path("icon-dashboard.svg")%>" alt=""> Dashboard </a>
                </li>
                <li>
                    <a href="/user-list" class="btn <%= params[:action] == "user_list" ? "active" : "" %>">
                        <img src="<%= asset_path("icon-users.svg")%>" alt=""> Users </a>
                </li>
                <li>
                    <a href="/transactions" class="btn <%= params[:action] == "transactions" ? "active" : "" %>">
                        <img src="<%= asset_path("icon-transactions.svg")%>" alt=""> Transactions </a>
                </li>
            </ul>
        </div>
        <div class="list_blk">
            <p class="title">Tournament</p>
            <ul>
                <li>
                    <a href="/tournament" class="btn <%= params[:action] == "tournament" ? "active" : "" %>" >
                        <img src="<%= asset_path("icon-tournaments.svg")%>" alt=""> Tournaments </a>
                </li>
                <li>
                    <a href="/tournament-banner" class="btn <%= params[:action] == "tournament_banner" ? "active" : "" %>">
                        <img src="<%= asset_path("icon-tbanner.svg")%>" alt=""> Tournament Banner </a>
                </li>
                <li>
                    <a href="/gift-rewards" class="btn <%= params[:action] == "gift_rewards" ? "active" : "" %>">
                        <img src="<%= asset_path("icon-gift-rewards.svg")%>" alt=""> Gift Rewards </a>
                </li>
            </ul>
        </div>
        <div class="list_blk">
            <p class="title">Settings</p>
            <ul>
                <li>
                    <a href="/notifications" class="btn <%= params[:action] == "notifications" ? "active" : "" %>">
                        <img src="<%= asset_path("icon-notification.svg")%>" alt=""> Push Notification </a>
                </li>
                <li>
                    <a href="/support" class="btn <%= params[:action] == "support" ? "active" : "" %>">
                        <img src="<%= asset_path("icon-support.svg")%>" alt=""> Support </a>
                </li>
                <li>
                    <a href="/terms" class="btn <%= params[:action] == "terms" || params[:action] == "privacy" || params[:action] == "faqs" || params[:action] == "popup" ? "active" : "" %>">
                        <img src="<%= asset_path("icon-guidelines.svg")%>" alt=""> Guidelines </a>
                </li>
              <li>
                <a rel="nofollow" href="/sub-admin-sign-up" class="btn <%= params[:action] == "sub_admin_sign_up" ? "active" : "" %>">
                  <img src="<%= asset_path("add-user.svg")%>" alt="">
                  Sub Admin Sign Up</a>
              </li>
              <li>
                <a rel="nofollow" data-method="delete" href="/admin_users/sign_out" class="btn log_out">
                  <img src="<%= asset_path("icon-logout.svg")%>" alt="">
                  Log out</a>
              </li>
            </ul>
        </div>
      <div class="btm_blk" onclick="window.location.href = '/admin-profile';" style="cursor: pointer">
            <div class="img">
                <img src="<%= current_admin_user.admin_profile_image.attached? ? current_admin_user.admin_profile_image.blob.url : asset_path("john-smith.jpg")%>" alt="" style="height: 100%">
            </div>
            <div class="content">
                <div class="txt">
                    <h6><%=current_admin_user.full_name%></h6>
                    <p><%=current_admin_user.admin_user_name%></p>
                </div>
                <%= link_to image_tag("icon-up-down.svg"), admin_profile_path, class: "btn up_btn" %>
            </div>
        </div>
    </div>
</aside>
<!-- sidebar -->