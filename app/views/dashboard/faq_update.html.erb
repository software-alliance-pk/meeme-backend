<main>
    <section id="memee">
        <%=render "dashboard/sidebar" %>
        <div id="guide" class="main_side">
            <div id="top_header">
                <div class="left_blk">
                    <h1>Guidelines</h1>
                    <div class="img">
                        <img src="<%= asset_path("icon-guide.svg")%>" alt="">
                    </div>
                </div>
                <div class="side">
                  <%=render "dashboard/notification_panel" %>
                </div>
            </div>
            <div class="inner_blk">
                <div class="wrapper ex">
                    <nav class="nav_list">
                        <ul class="list">
                            <li><a href="/terms">Terms & Conditions</a></li>
                            <li><a href="/privacy">Privacy Policy</a></li>
                            <li class="active"><a href="/faqs">FAQs</a></li>
                            <li><a href="/pop-ups">Pop Ups</a></li>
                        </ul>
                    </nav>
                    <div class="content_blk edit">
                        <%= form_with(model: @faqs, url: faqs_path(@faqs), method: :patch, local: true) do |form| %>
                            <div class="row mb-5">
                                <div class="col-9">
                                </div>
                                <div class="col-3">
                                    <div class="btn_blk edit">
                                        <%= form.submit "Update" ,class: "site_btn prime_btn round", :onclick => "history()" %>
                                    </div>
                                </div>
                            </div>
                            
                                <div class="row">
                                    <div class="col-12">
                                        <h6 class="mb-4">FAQ Title</h6>
                                        <div class="form_blk">
                                            <%= form.text_field :title , class: "input", id: "title" ,placeholder: "Enter Title Here" %>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <h6 class="mb-4">Description</h6>
                                        <div class="form_blk">
                                            <%= form.text_area :description, cols:"30", rows:"20", class: "input", placeholder: "Start typing here...." %>
                                            <%= form.hidden_field :id, value: @faqs.id %>
                                        </div>
                                    </div>
                                </div> 
                        <% end %>

                    </div>
                    <div class="history">
                        <h5>History</h5>
                        <ul class="htry_list">
                            <p id="created"></p>
                            <p id="faq_title"></p>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<script>
    function history(){
        var title = document.getElementById("title").value
        document.getElementById("created").innerHTML = "New Faq Created"
        document.getElementById("created").innerHTML = title
    }
</script>