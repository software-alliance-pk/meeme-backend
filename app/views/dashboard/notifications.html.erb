<main>
  <section id="memee">
    <%=render "dashboard/sidebar" %>
    <div id="notify" class="main_side">
      <div id="top_header">
        <div class="left_blk">
          <h1>Push Notifications</h1>
          <div class="img d-flex">
            <img src="<%= asset_path("icon-beep.svg")%>" alt="" class="align-self-center">
          </div>
        </div>
        <div class="side">
          <%=render "dashboard/notification_panel" %>
        </div>
      </div>
      <div class="outter">
        <div id="toast" class="toast" style="display: none;"></div>
        <div class="left_blk">
          <%= form_with(model: @notification, local: true, html: {id: 'form'}) do |form| %>
            <div class="top">
              <h6>Choose where to send</h6>
              <div class="caldr_btn">
                <input type="date" name="send_date" class="btn datepicker"></input>
              </div>

            </div>
            <div class="row">
              <div class="col-12">
                <div class="check_blk">
                  <input type="checkbox" name="send_all" id="send_all" checked required>
                  <label for="send_all">Send to all users</label>
                </div>
              </div>
              <div class="col-12">
                <div class="form_blk">
                  <input type="text" name="title" id="title" class="input"
                         placeholder="Push Notification Title" required>
                </div>
              </div>
              <%# <div class="col-12">
                <div class="form_blk">
                  <input type="text" name="body" id="link" class="input" placeholder="Link (Optional)">
                </div>
              </div> %>
              <div class="col-12">
                <div class="form_blk">
                  <textarea class="input" name="body" id="body" rows="10" placeholder="Start typing here....." required></textarea>
                </div>
              </div>
            </div>
            <div class="btn_blk">
              <button type="submit" class="site_btn prime_btn round px pop_btn"
                      data-popup="notify_confirm">Send Now</button>
            </div>
          <% end %>
        </div>
        <div class="right_blk">
          <h5 class="title">History</h5>
          <div class="list_outter">
            <ul class="list">
              <% if Notification.any? %>
                <% Notification.where(send_all: true).order(created_at: :desc).each do |history| %>
                  <% if history.send_date.present? && history.send_date.to_date <= Date.today ||  history.send_date.empty?%>
                    <li>
                      <div class="item">
                        <p class="date"><%= history.created_at.strftime("%m/%d/%Y") %></p>
                        <p class="txt">Notification was sent</p>
                      </div>
                    </li>
                  <%end%>  
                <% end %>
              <% end %>
            </ul>

          </div>
        </div>
      </div>
    </div>
    <div class="popup" data-popup="notify_confirm" id="notify_confirm">
      <div class="table_dv">
        <div class="table_cell">
          <div class="contain">
            <div class="row justify-content-center">
              <div class="col-12">
                <div class="_inner">
                  <h3>Inform Them</h3>
                  <p>Are you sure you want to push to notification to all the users?</p>
                  <div class="btn_blk">
                    <button type="button" class="site_btn prime_btn round" onclick="save()">Yes</button>
                    <button type="button" class="site_btn no_btn round" onclick="cancel()">No</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<style>
  .toast {
    position: fixed;
    top: 20px;
    right: 20px;
    padding: 10px 20px;
    font-size: 14px;
    color: white;
    border-radius: 5px;
    z-index: 1000;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    animation: fade-in-out 10s forwards;
}

/* Success toast background */
.toast.success {
    background-color: #198754;
}

/* Error toast background */
.toast.error {
    background-color: #dc3545;
}

/* Keyframes for fade-in-out */
@keyframes fade-in-out {
    0% { opacity: 0; transform: translateY(20px); }
    10% { opacity: 1; transform: translateY(0); }
    90% { opacity: 1; transform: translateY(0); }
    100% { opacity: 0; transform: translateY(20px); }
}
</style>

<script>
    $("#form").on('submit', function(event){
        event.preventDefault()
        document.getElementById("notify_confirm").style.display = "block"
    })

    function save() {
    var event = jQuery.Event("submit");
    $("#form").first().trigger(event);

    var sendDate = document.querySelector('.datepicker').value; // Select the input by class name
    var title = $("#title").val();
    var body = $("#body").val();
    var sendAll = $("#send_all").prop("checked");

    if (event.isDefaultPrevented()) {
        event.currentTarget.submit();
        document.getElementById("notify_confirm").style.display = "none";
    }
    
    document.getElementById("notify_confirm").style.display = "none";
    $("#title").val("");
    $("#body").val("");
    $("#send_all").prop("checked", false);

    var message = sendDate ? "Notification scheduled successfully." : "Notification sent successfully.";
    showToast(message);

    // Get the current date
    var today = new Date();
    var formattedDate = (today.getMonth() + 1).toString().padStart(2, '0') + '/' + today.getDate().toString().padStart(2, '0') + '/' + today.getFullYear();

      // Append to history list dynamically
      if (sendAll) {
          var newHistoryItem = `
              <li>
                  <div class="item">
                      <p class="date">${formattedDate}</p>
                      <p class="txt">Notification was sent</p>
                  </div>
              </li>
          `;
          $(".list").prepend(newHistoryItem);
      }
  }


    function showToast(message, isError = false) {
      console.log("Inside toast");
      const toast = document.getElementById("toast");

      // Set the message and class
      toast.innerText = message;
      toast.className = `toast ${isError ? "error" : "success"}`;

      // Show the toast
      toast.style.display = "block";

      // Automatically hide the toast after 3 seconds
      setTimeout(() => {
          toast.style.display = "none";
          if (typeof callback === "function") {
              callback(); // Execute the callback function
          }
      }, 3000);
    }

    function cancel(){
        document.getElementById("notify_confirm").style.display = "none"
    }

    document.addEventListener('DOMContentLoaded', function() { 
        const today = new Date();
        const day = String(today.getDate()).padStart(2, '0');
        const month = String(today.getMonth() + 1).padStart(2, '0');
        const year = today.getFullYear();
        const formattedDate = `${year}-${month}-${day}`;
        console.log("formattedDate: ", formattedDate)

        document.querySelector('input[name="send_date"]').setAttribute('min', formattedDate);
        flatpickr('.datepicker', {
          minDate: formattedDate  // Set the minimum date to today
        });

    })
</script>