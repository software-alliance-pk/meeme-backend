<main>
    <section id="logon" style="background-image: url(<%= asset_path("logon-bg.jpg")%>);">
        <div class="contain">
            <div class="log_blk">
                <form action="" method="POST">
                    <div class="logo">
                        <img src="<%= asset_path("logo.svg")%>" alt="">
                    </div>
                    <div class="txt">
                        <h1 class="fw_700">Forgot Password?</h1>
                        <p>Enter your details below</p>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form_blk">
                                <input type="text" name="" id="" class="input" placeholder="Email">
                            </div>
                        </div>
                    </div>
                    <div class="btn_blk">
                        <button type="button" class="site_btn prime_btn w-100 pop_btn" data-popup="forgot_popup">Reset Password</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="popup" data-popup="forgot_popup" id="logon_modal">
            <div class="table_dv">
                <div class="table_cell">
                    <div class="contain">
                        <div class="row justify-content-center">
                            <div class="col-md-7">
                                <div class="_inner">
                                    <button type="button" class="x_btn"></button>
                                    <div class="success_img">
                                        <img src="<%= asset_path("forgot-confirm.svg")%>" alt="">
                                    </div>
                                    <p>Your reset password link has been sent to your email.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>