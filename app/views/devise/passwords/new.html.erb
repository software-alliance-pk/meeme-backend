<main>
  <section id="logon" style="background-image: url(<%= asset_path("logon-bg.jpg")%>);">
    <div class="contain">
      <div class="log_blk">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messrages", resource: resource %>
        <form action="" method="POST">
          <div class="logo">
            <img src="<%= asset_path("logo.svg")%>" alt="">
          </div>
          <div class="txt">
            <h1 class="fw_700">Forgot Password?</h1>
            <p>Enter your details below</p>
          </div>
          <div class="row">
            <div class="col-12">
              <div class="form_blk">
                <%= f.email_field :email, autofocus: true, autocomplete: "email",type:"text",id:"", class:"input", placeholder:"Email" %>
                <% if resource.errors[:email].present? %>
                  <div id="forgot_email_password" style="margin: 5px 0 0 15px; color: red"><%= resource.errors.full_messages_for(:email).first %></div>
                <% end %>
              </div>
            </div>
          </div>
          <div class="btn_blk">
            <button class="site_btn prime_btn w-100 pop_btn"><%= f.submit "Reset Password",type:"button", class:"site_btn prime_btn w-100 pop_btn" %></button>
<!--            <button type="button" class="site_btn prime_btn w-100 pop_btn" data-popup="forgot_popup">Reset Password</button>-->
          </div>
        </form>
        <% end %>
      </div>
    </div>
    <div class="popup" data-popup="forgot_popup" id="logon_modal">
      <div class="table_dv">
        <div class="table_cell">
          <div class="contain">
            <div class="row justify-content-center">
              <div class="col-md-7">
                <div class="_inner">
                  <button type="button" class="x_btn" onclick="close_modal()"></button>
                  <div class="success_img">
                    <img src="<%= asset_path("forgot-confirm.svg")%>" alt="">
                  </div>
                  <p>Your reset password link has been sent to your email.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<% if flash[:reset].present? %>
  <script>
      document.getElementById('logon_modal').style.display = 'block'
  </script>
<% end %>

<script>
  function close_modal(){
      document.getElementById('logon_modal').style.display = 'none'
      window.location = "<%= new_admin_user_session_path %>"
  }
</script>

